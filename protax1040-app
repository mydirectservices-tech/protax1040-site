'use client';
import {useState,useRef,useEffect} from 'react';
export default function Upload(){const[files,setFiles]=useState<File[]>([]);const[status,setStatus]=useState('');const dropRef=useRef<HTMLDivElement>(null);useEffect(()=>{const el=dropRef.current;if(!el)return;const prevent=(e:any)=>{e.preventDefault();e.stopPropagation();};const onDrop=(e:any)=>{prevent(e);if(e.dataTransfer?.files?.length)handleFiles(e.dataTransfer.files)};['dragenter','dragover','dragleave','drop'].forEach(evt=>el.addEventListener(evt,prevent));el.addEventListener('drop',onDrop);return()=>{['dragenter','dragover','dragleave','drop'].forEach(evt=>el.removeEventListener(evt,prevent));el.removeEventListener('drop',onDrop);};},[]);function handleFiles(list:FileList|File[]){const arr=Array.from(list||[]);const allowed=['application/pdf','image/jpeg','image/png','application/msword','application/vnd.openxmlformats-officedocument.wordprocessingml.document'];const max=25*1024*1024;const ok=arr.filter(f=>allowed.includes(f.type)&&f.size<=max);const bad=arr.filter(f=>!allowed.includes(f.type)||f.size>max);if(bad.length)setStatus('Some files were skipped (type/size limits).');setFiles(prev=>[...prev,...ok]);}
async function submit(){if(!files.length){setStatus('Add at least one file.');return;}setStatus('Encrypting & uploading‚Ä¶ (demo)');await new Promise(r=>setTimeout(r,800));setFiles([]);setStatus('Uploaded securely. We‚Äôll notify you by email. (demo)');}
return(<section className='max-w-2xl mx-auto card p-6'><h1 className='text-2xl font-bold'>Secure Upload (Demo)</h1><div ref={dropRef} className='mt-4 border-2 border-dashed rounded-2xl p-8 text-center bg-blue-50 border-blue-300'><div className='text-3xl mb-2'>‚¨ÜÔ∏è</div><p className='font-medium'>Drag & drop files here</p><p className='text-sm text-slate-600'>PDF, JPG/PNG, DOC/DOCX ‚Ä¢ up to 25 MB each</p><div className='mt-4'><label className='btn-primary cursor-pointer'><input type='file' className='hidden' multiple onChange={(e)=> e.target.files && handleFiles(e.target.files)}/>Choose files</label></div></div>{!!files.length&&(<div className='mt-4 bg-slate-100 rounded-2xl p-4 max-h-48 overflow-auto'><p className='font-medium mb-2'>Files ready:</p><ul className='space-y-1 text-sm'>{files.map((f,i)=>(<li key={i} className='flex items-center justify-between'><span className='truncate mr-2'>{f.name}</span><span className='text-slate-500'>{(f.size/1024/1024).toFixed(2)} MB</span></li>))}</ul></div>)}<div className='mt-6 flex items-center justify-between'><button onClick={()=>{setFiles([]);setStatus('');}} className='btn-outline'>Clear</button><button onClick={submit} className='btn-accent'>Submit securely</button></div>{status&&<p className='mt-3 text-sm text-slate-700'>{status}</p>}<p className='mt-6 text-xs text-slate-500'>By uploading, you agree to our Privacy Policy and Client Agreement.</p></section>)}
